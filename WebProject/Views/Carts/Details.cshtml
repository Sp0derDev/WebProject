@model WebProject.Models.Cart

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Cart</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
        <dt>Total Cart Price</dt>
        <dd>@Model.CartItems.Sum(c=>c.Product.Price * c.Quantity) QAR</dd>

    </dl>
</div>

<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>Product Name</th>
        <th>Product Price</th>
        <th>Quantity</th>
        <th>Total Price</th>
    </tr>
    @foreach (var item in Model.CartItems)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Product.Price) </td>
            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
            <td>@((double)item.Product.Price * (int)item.Quantity) QAR</td>
        </tr>

    }
</table>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
